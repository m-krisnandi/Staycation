<div
  class="tab-pane fade"
  id="add-item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <form action="/admin/item" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              name="title"
              class="form-control"
              placeholder="Enter title"
              required
            />
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input
              type="number"
              name="price"
              class="form-control"
              placeholder="Enter price"
              required
            />
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input
              type="text"
              name="city"
              class="form-control"
              placeholder="Enter city"
              required
            />
          </div>
          <div class="form-group">
            <label for="category">Category</label>
            <select name="categoryId" class="form-control">
                <option value="">--- Category ---</option>
                <% for(let i = 0; i < category.length; i++) { %>
                    <option value="<%= category[i].id %>"><%= category[i].name %></option>
                <%}%>
            </select>
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="file" multiple='multiple' name="image" class="form-control" required />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="about" name="about" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
</div>
